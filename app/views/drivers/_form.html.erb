<%= form_with model: @driver, class: 'driver-form' do |f| %>
  <p>Please fill out this book's information</p>

  <div>
    <%= f.label :name, "Please enter a name" %>
    <%= f.text_field :name, placeholder: "Your name here" %>
  </div>

  <div>
    <%= f.label :vin %>
    <%= f.text_field :vin, placeholder: "Enter your vehicle's VIN" %>
  </div>

  <%= f.submit button_text %>
                               
<% end %>