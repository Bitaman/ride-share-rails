<style>
  table thead { display:block; }
  table tbody { height:450px; overflow-y:scroll; display:block; }
</style>

<h3>Passenger list</h3>
<table class="passenger-snippet">
  <tbody>
    <% @passenger.each do |passenger| %>
    <tr>
      <td>
        <img class="rand-photo" src="https://i.pinimg.com/736x/90/0d/81/900d818aed5ac53149e68093a06ebeb6--rainbow-ice-cream-colorful-ice-cream.jpg?b=t">
      </td>
      <td>
        <%= link_to passenger.name, passenger_path(passenger) %>
      </td>
      <td>
        <%= link_to "Edit", edit_passenger_path(passenger.id) %>
      </td>
      <td>
      <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data:{confirm: "Are you sure you want to delete that passenger?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>